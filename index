<body>
    <div class="container">
        <div class="header">
            <h1>üîã Battery Coupon Validation</h1>
            <p>Enter coupon details to validate and redeem</p>
        </div>

        <form id="couponForm">
            <div class="form-group">
                <label for="coupon_code">Coupon Code <span class="required">*</span></label>
                <input type="text" id="coupon_code" name="coupon_code" required placeholder="Enter coupon code">
            </div>

            <div class="form-group">
                <label for="distributor_id">Distributor ID <span class="required">*</span></label>
                <input type="text" id="distributor_id" name="distributor_id" required placeholder="Your distributor ID">
            </div>

            <div class="form-group">
                <label for="customer_name">Customer Name</label>
                <input type="text" id="customer_name" name="customer_name" placeholder="Customer's name (optional)">
            </div>

            <div class="form-group">
                <label for="customer_email">Customer Email</label>
                <input type="email" id="customer_email" name="customer_email" placeholder="customer@email.com (optional)">
            </div>

            <button type="submit" class="validate-btn" id="submitBtn">
                <span id="btnText">Validate Coupon</span>
                <span id="btnLoading" class="loading" style="display: none;"></span>
            </button>
        </form>

        <div id="result" class="result"></div>
    </div>

    <script>
        // REPLACE THIS URL with your actual n8n webhook URL
        const WEBHOOK_URL = 'https://mneimneh.app.n8n.cloud/webhook-test/validate-coupon';

        document.getElementById('couponForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const submitBtn = document.getElementById('submitBtn');
            const btnText = document.getElementById('btnText');
            const btnLoading = document.getElementById('btnLoading');
            const resultDiv = document.getElementById('result');
            
            // Show loading state
            submitBtn.disabled = true;
            btnText.style.display = 'none';
            btnLoading.style.display = 'inline-block';
            resultDiv.style.display = 'none';
            
            // Get form data
            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData.entries());
            
            try {
                const response = await fetch(WEBHOOK_URL, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data)
                });
                
                const result = await response.json();
                
                // Show result
                resultDiv.style.display = 'block';
                
                if (result.success) {
                    resultDiv.className = 'result success';
                    resultDiv.innerHTML = `
                        <div class="result-header">
                            ‚úÖ Coupon Valid & Redeemed!
                        </div>
                        <div class="result-details">
                            <div class="detail-row">
                                <span class="detail-label">Coupon Code:</span>
                                <span class="detail-value">${result.coupon_code}</span>
                            </div>
                            <div class="detail-row">
                                <span class="detail-label">Discount:</span>
                                <span class="detail-value">${result.discount_description}</span>
                            </div>
                            <div class="detail-row">
                                <span class="detail-label">Distributor:</span>
                                <span class="detail-value">${result.distributor_id}</span>
                            </div>
                        </div>
                    `;
                    
                    // Clear form on success
                    e.target.reset();
                } else {
                    resultDiv.className = 'result error';
                    let errorMessage = result.message || 'Coupon validation failed';
                    
                    // Customize error messages
                    if (result.error === 'COUPON_NOT_FOUND') {
                        errorMessage = '‚ùå This coupon code does not exist';
                    } else if (result.error === 'COUPON_NOT_ISSUED') {
                        errorMessage = '‚è≥ This coupon has not been issued to a customer yet';
                    } else if (result.error === 'COUPON_EXPIRED') {
                        errorMessage = '‚è∞ This coupon has expired';
                    } else if (result.error === 'COUPON_ALREADY_USED') {
                        errorMessage = 'üîí This coupon has already been redeemed';
                    }
                    
                    resultDiv.innerHTML = `
                        <div class="result-header">
                            ${errorMessage}
                        </div>
                        <div class="result-details">
                            <div class="detail-row">
                                <span class="detail-label">Coupon Code:</span>
                                <span class="detail-value">${result.coupon_code}</span>
                            </div>
                        </div>
                    `;
                }
            } catch (error) {
                resultDiv.style.display = 'block';
                resultDiv.className = 'result error';
                resultDiv.innerHTML = `
                    <div class="result-header">
                        üö´ Connection Error
                    </div>
                    <p>Unable to validate coupon. Please check your connection and try again.</p>
                `;
            } finally {
                // Reset button state
                submitBtn.disabled = false;
                btnText.style.display = 'inline';
                btnLoading.style.display = 'none';
            }
        });

        // Auto-uppercase coupon codes
        document.getElementById('coupon_code').addEventListener('input', function(e) {
            e.target.value = e.target.value.toUpperCase();
        });
    </script>
</body>
